--- 
import Head from '@layouts/Head.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<Head title={title} />
	</head>
	<body data-theme="dark">
		<slot />
	</body>
</html>

<style lang="scss" is:global>
* {
	margin: 0;
	padding: 0;
	box-sizing: border-box;
}

html {
	height: 100%;
}

body {
	position: relative;
	display: flex;
	align-items: center;
	justify-content: center;
	min-height: 100%;
	font-family: 'Inter', sans-serif;
	font-size: 18px;
	font-weight: 400;
	background-color: var(--bg-color);
	&[data-theme="dark"] {
		--bg-color: #0a0a0a;
	}
	&[data-theme="light"] {
		--bg-color: #f9f9f9;
	}
}
</style>
