{
  "extends": "astro/tsconfigs/strict",
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.astro"
, "astro.config.mjs"  ],
  "compilerOptions": {
    "strictNullChecks": true,
    "baseUrl": ".",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "paths": {
      "@components/*": [
        "src/components/*"
      ],
      "@layouts/*": [
        "src/layouts/*"
      ],
    },
  },
}
